<import name="my-image" src="../../common/image.ux"></import>

<template>
  <div class="list-item">
    <div class="image-wrap">
      <my-image
        width="128"
        height="128"
        resize-mode="{{imgResizeMode}}"
        object-fit="{{imgObjectFit}}"
        src="{{imgUrl}}"
        alt="data:image/png;base64,"
      ></my-image>
    </div>
    <div class="content-wrap">
      <text class="title">{{ title }}</text>
      <text class="content">{{ content }}</text>
      <div class="record-row">
        <div class="record-item" for="{{record}}">
          <image
            class="record-item-icon"
            src="{{recordImg[$item.type]}}"
          ></image>
          <text class="record-item-number">{{
            $item.number | filterRecordNumber
          }}</text>
        </div>
      </div>
    </div>
  </div>
</template>

<script>
export default {
  props: {
    title: {
      default: "标题"
    },
    content: {
      default: "标签文字"
    },
    record: {
      default: [
        {
          type: "browse",
          number: 1000
        },
        {
          type: "collect",
          number: 1000
        }
      ]
    },
    imgUrl: {
      default: ""
    },
    imgResizeMode: {
      default: "cover"
    },
    imgObjectFit: {
      default: "cover"
    }
  },
  data() {
    return {
      recordImg: {
        browse:
          "data:image/png;base64,",
        like:
          "data:image/png;base64,",
        collect:
          "data:image/png;base64,"
      }
    };
  },
  filterRecordNumber(val) {
    val = Number(val);

    return val > 10000 ? `${Math.round(val / 10000)}万` : val;
  }
};
</script>

