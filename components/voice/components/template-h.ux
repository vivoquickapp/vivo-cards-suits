<import name="my-image" src="../../common/image.ux"></import>

<template>
  <div class="template-item">
    <div class="image-wrap">
      <my-image
        class="image"
        width="128"
        height="128"
        resize-mode="{{imgResizeMode}}"
        object-fit="{{imgObjectFit}}"
        src="{{imgUrl}}"
        alt="data:image/png;base64,"
      ></my-image>
    </div>
    <div class="info-wrap">
      <text class="song">{{ song }}</text>
      <text class="singer">{{ singer }}</text>
    </div>
    <div class="button-wrap">
      <div class="btn-stop" if="{{isPlay}}">
        <my-image
          width="48"
          height="48"
          src="data:image/png;base64,UklGRmwAAABXRUJQVlA4TF8AAAAvX8AXEC8QEUQCJCSq1SVOc3/Qz4BRG0mOdhlEBqslEA7AUbhT8acz4XlBEf0nk7bpDPTsLIRHYWn2KHORc0KTuci5YMhc5NxwyFzkAMhc/iex72T7DrfvfIcf8SQsAAA="
          onclick="handleClickStop"
        ></my-image>
      </div>
      <div class="btn-play" else>
        <my-image
          width="48"
          height="48"
          src="data:image/png;base64,"
          onclick="handleClickPlay"
        ></my-image>
      </div>
      <div class="btn-next">
        <my-image
          width="48"
          height="48"
          src="data:image/png;base64,"
          onclick="handleClickNext"
        ></my-image>
      </div>
    </div>
  </div>
</template>

<script>
export default {
  props: {
    song: {
      default: "歌曲"
    },
    singer: {
      default: "歌手"
    },
    imgUrl: {
      default: ""
    },
    imgResizeMode: {
      default: ""
    },
    imgObjectFit: {
      default: ""
    }
  },
  data() {
    return {
      isPlay: false
    };
  },
  handleClickPlay() {
    this.isPlay = true;
    this.$emit("clickPlay");
  },
  handleClickStop() {
    this.isPlay = false;
    this.$emit("clickStop");
  },
  handleClickNext() {
    this.isPlay = true;
    this.$emit("clickNext");
  }
};
</script>

